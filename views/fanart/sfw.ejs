
<section>
  <h1>SFW Gallery</h1>
  <form method="get">
    <input name="q" placeholder="Search art..." value="<%= q || '' %>" />
    <button>Search</button>
  </form>
  <div class="grid">
    <% arts.forEach(a => { %>
      <figure>
        <img src="<%= a.image_path %>" alt="<%= a.title %>" />
        <figcaption><%= a.title %> â€” <em><%= a.artist_name %></em></figcaption>
      </figure>
    <% }) %>
  </div>
  <%- include('../partials/pagination', { total, page, limit, q }) %>
</section>
