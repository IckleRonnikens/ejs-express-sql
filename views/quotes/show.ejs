<section class="container">
  <h1>Quote #<%= quote.id %></h1>

  <div class="meta">
    <strong><%= quote.book %></strong>
    <% if (quote.year) { %> · <span><%= quote.year %></span><% } %>
    <% if (quote.created_at) { %> · <small><%= quote.created_at %></small><% } %>
  </div>

  <blockquote class="text"><%= quote.quote_text %></blockquote>

  <% if (quote.source_note) { %>
    <p><em><%= quote.source_note %></em></p>
  <% } %>

