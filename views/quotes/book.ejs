
<section>
  <h1>Quotes: <%= book.toUpperCase() %></h1>
  <form method="get">
    <input name="q" placeholder="Search quotes or characters..." value="<%= q || '' %>" />
    <button>Search</button>
  </form>
  <ul>
    <% quotes.forEach(qt => { %>
      <li>
        <blockquote>“<%= qt.quote %>”</blockquote>
        <small><%= qt.character || 'Unknown' %></small>
      </li>
    <% }) %>
  </ul>
</section>
