
<section>
  <h1>Feedback</h1>
  <form method="post" action="/feedback">
    <label>Name (optional) <input name="author" maxlength="100"/></label>
    <label>Type 
      <select name="type">
        <option value="comment">Comment</option>
        <option value="suggestion">Suggestion</option>
      </select>
    </label>
    <label>Message <textarea name="message" required maxlength="2000"></textarea></label>
    <button type="submit">Submit</button>
  </form>

  <h2>Recent Entries</h2>
  <ul>
    <% entries.forEach(e => { %>
      <li><strong>[<%= e.type %>]</strong> <%= e.message %> â€” <em><%= e.author || 'Anonymous' %></em> <small><%= e.created_at %></small></li>
    <% }) %>
  </ul>
</section>
