
<!-- HEADER SECTION STARTS -->
  <section id="hero" class="hero" >
    <div class="container">
          <video autoplay muted loop class="video">
            <source src="/public/images/backgrounds/home-page/hero.mp4" type="video/mp4" class="img-fluid embed-responsive embed-responsive-16by9">
          </video>
            <h1 class="text-center">Harry and Hermione</h1>
            <p class="text-center "><i>The Ship That Never Stops Sailing</i></p>
      </div>
      </div>
    </section>
<!-- HERO SECTION ENDS -->


<!-- ABOUT SECTION STARTS -->
<section class="about bg-black text-white">
<div class="container ">
  <div class="row  ">
    <div class="col-md-6 ">
      <img src="/public/images/backgrounds/about-page/about.jpg" class="img-fluid w-100" />
      </div>
    <div class="col-md-6 ">
      <h2>About Harry and Hermione</h2><hr />
        <p>
          <u>Harry and Hermione</u> is a non-for-profit, fan-created website.
        </p>

        <p>
          <u>The original objective</u>: To create a website which replaces the void Portkey.org
          left behind as a website for fanfiction and forum for discussion based solely on the Harry/Hermione pairing.
        </p>

        <p>
          <a href="/fanfiction">Fanfiction</a>: Was to be a place where authors could post their HHR stories.
          The stories would be sorted by readers using a search function similar to what porkey and the archive have
          (by genres, pairings, rating, and length, options such as including "favorites" are also a possibility).
        </p>

        <p>
          <a href="/fanart">Fanart</a>: A section called the “Gallery” would be dedicated to posting fan art and where artists can receive comments for their work
        </p>

        <a href="/about" class="btn btn-primary rounded-0">Read More</a>
      </div>
    </div>
  </div>
</section>
<!-- ABOUT SECTION ENDS -->



<!-- BLOG SECTION STARTS -->
<section class="blog">
<div class="container">
    <h2 class="text-white text-center border-bottom">Latest Blog</h2><bt /><hr />

<div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <% posts.forEach(p => { %>
    <div class="col-md-6">
      <img src="<%= p.image %>" class="d-block mx-lg-auto img-fluid" alt="advent-fest-2022" width="700" height="500">
    </div>
    
    <div class="col-md-6">
      <h1 class="display-5 fw-bold lh-1 mb-3 text-white"><%= p.title %></h1>
        <p class="lead text-white">
          <%= p.summary %>
        </p>
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <a class="btn btn-primary btn-lg btb-link px-4 me-md-2 rounded-0" role="button" href="/blog/<%= p.slug %>">Read More</a>
        </div>
    </div>
    <% }) %>
  </div>
</div>
</section>
<!-- BLOG SECTION ENDS -->




<!-- CARDS SECTION STARTS -->
<section class="cards bg-black">

<div class="content-wrapper">
  
  <div class="news-card">
    <a href="/fanart" class="news-card__card-link"></a>
    <img src="/public/images/backgrounds/home-page/art.jpg" alt="" class="news-card__image">
    <div class="news-card__text-wrapper">
      <h2 class="news-card__title">Fanart</h2>
      <div class="news-card__post-date">Updated: Feb 14, 2026</div>
      <div class="news-card__details-wrapper">
        <p class="news-card__excerpt">The best fanart from the Harry and Hermione community...</p>
        <a href="/fanart" class="news-card__read-more">Read more <i class="fas fa-long-arrow-alt-right"></i></a>
      </div>
    </div>
  </div>

  <div class="news-card">
    <a href="/fanfiction" class="news-card__card-link"></a>
    <img src="/public/images/backgrounds/home-page/stories.jpg" alt="" class="news-card__image">
    <div class="news-card__text-wrapper">
      <h2 class="news-card__title">Fanfiction</h2>
      <div class="news-card__post-date">Updated: Feb 14, 2026</div>
      <div class="news-card__details-wrapper">
        <p class="news-card__excerpt">The best writers, and the most comprehensive list of stories available...</p>
        <a href="/fanfiction" class="news-card__read-more">Read more <i class="fas fa-long-arrow-alt-right"></i></a>
      </div>
    </div>
  </div>

  <div class="news-card">
    <a href="/projects" class="news-card__card-link"></a>
    <img src="/public/images/backgrounds/home-page/projects.jpg" alt="" class="news-card__image">
    <div class="news-card__text-wrapper">
      <h2 class="news-card__title">Projects</h2>
      <div class="news-card__post-date">Updated: Feb 14, 2026</div>
      <div class="news-card__details-wrapper">
        <p class="news-card__excerpt">All the major projects undertaken within the Harry and Hermione community..</p>
        <a href="/projects" class="news-card__read-more">Read more <i class="fas fa-long-arrow-alt-right"></i></a>
      </div>
    </div>
  </div>

  

</div>
</section>
<!-- CARD SECTION ENDS -->


<!-- START FIRST QUOTE SECTION -->
<section class="quote flex-section overflow-hidden relative">
<div class="text-secondary px-4 py-5 text-center">
  <div class="container">
      <i class="fa-solid fa-5x fa-otter text-white"></i><br />
        <div class="py-5">
          <figure class="text-center">
            <blockquote class="blockquote text-white">
              <p>
                "Harry- you're a great wizard, you know."<br>
                "Not as good as you-"<br>
                "Me? Books! And cleverness! There are more important things - friendship and bravery..."<br>
              </p>
            </blockquote>
          <figcaption class="blockquote-footer">
            Hermione Granger, <cite title="Source Title">Harry Potter and the Philosopher's Stone</cite>
          </figcaption>
          </figure>

          <a class="btn btn-primary rounded-0" href="/quotes" role="button">Read More Quotes</a>

      </div>
    </div>
  </div>
</section>
<!-- END FIRST QUOTE SECTION -->





<!-- START HOME-FOOTER SECTION -->
<section>
<div class="row">
  <div class="col-md-4">
      <h2>Recent Blog Posts</h2>
  <ul>
    <% posts.forEach(p => { %>
      <li>
        <a href="/blog/<%= p.slug %>"><%= p.title %></a>
        <small> — <%= p.published_at %></small>
      </li>
    <% }) %>
  </ul>
  </div>
  <div class="col-md-4">
      <h2>Recent Artworks</h2>
  <div class="grid">
    <% arts.forEach(a => { %>
      <figure>
        <img src="<%= a.image_path %>" alt="<%= a.title %>" />
        <figcaption><%= a.title %> — <em><%= a.artist_name %></em></figcaption>
      </figure>
    <% }) %>
  </div>
  </div>
  <div class="col-md-4">
     <h2>Recent Stories</h2>
  <ul>
    <% stories.forEach(s => { %>
      <li><strong><%= s.title %></strong> — <em><%= s.writer_name %></em> <small><%= s.published_at %></small></li>
    <% }) %>
  </ul>
  </div>
</div>

</section>
<!-- END HOME-FOOTER SECTION -->